<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>

  <% if company_user_signed_in? %>
    <%= f.hidden_field :company_profile_id, value: current_company_user.company_profile_id %>
  <% end %>
  <% if admin_signed_in? %>
    <%= f.input :company_profile_id, :collection => CompanyProfile.find(:all), :label_method => :name,:value_method => :id,:label => "Company" ,:include_blank => false %>
  <% end %> 

  <div class="inputs">
    <%= f.input :make %>
    <%= f.input :v_type, label: "Type" %>
    <%= f.input :year %>
    <%= f.input :color %>
    <%= f.input :image %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
